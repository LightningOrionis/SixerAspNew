@model List<Sixerr.Models.Order>

@{
    ViewData["Title"] = "Sixerr";
}

@if (Model.Count == 0)
{
    <h3 style="margin: 30px, 0px;"> У вас пока что ничего не заказали </h3>

}
else
{
    <h3 style="margin: 30px, 0px;"> Заказанные у меня услуги </h3>
    <div class="panel panel-default">
        <table class="table table-bordered table-striped">
            <thead class="bg-success">
                <tr>
                    <th> № </th>
                    <th> Название услуги</th>
                    <th> Цена </th>
                    <th> Заказчик </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <th> @order.Id </th>
                        <th> @Html.ActionLink(order.Gig.Title, "Details", "Gigs", new { id = order.Gig.Id }) </th>
                        <th> $@order.Gig.Price</th>
                        <th> @Html.ActionLink(order.Orderer.User.UserName, "Details", "Profiles", new { id = order.Orderer.Id }) </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}