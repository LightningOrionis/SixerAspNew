@model Sixerr.Models.Gig

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>  
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3> @Model.Title </h3>
                    <hr>
                    <img src="~/images/@Model.Photo" class="img-responsive center-block">
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4> Об услуге </h4>
                </div>
                <div class="panel-body">
                    <p> @Model.Description </p>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4> Отзывы: </h4>
                    <ul class="list-group">
                        @foreach(var review in (List<Review>)ViewData["reviews"])
                        {
                            <li class="list-group-item">
                                <div class="row">                                    
                                    <div class="col-md-10">
                                        <h4><b> <!--review.Author.User.UserName--> Username</b> </h4>
                                        <p> @review.Text </p>
                                    </div>
                                </div>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <!--div for new comment-->
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <button class="btn btn-success btn-block" type="button"> Заказать услугу ($@Model.Price)  </button>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <img src="GIG.USER.AVATAR" alt="" class="img-circle center-block">
                    <h4 class="text-center">
                        MODEL:USER:USER:USERNAME
                    </h4>
                    <hr>
                    <p> MODEL:USER:ABOUT </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!--IF USER == GIG.CREATOR-->
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
