@model List<Sixerr.Models.Gig>

@{
    ViewData["Title"] = "Sixerr";
}

<div class="row">
    <div class="col-lg-12">
        <img src="~/img/banner.gif" class="banner" style="width:100%;">
    </div>
</div>

@foreach (var item in Model)
{
    <div class="col-lg-3">
        <div class="thumbnail">
            <a href="@Url.Action("Details", "Gigs", new { Id = item.Id })"><img src="~/images/@item.Photo" height="200" width="100"></a>
            <div class="caption">
                @Html.ActionLink(item.Title, "Details", "Gigs", new { id = item.Id }, null)
                <p><span> Исполнитель: @Html.ActionLink(item.User.User.UserName, "Details", "Profiles", new { id = item.User.Id }, null))</span> 
                <b class="green pull-right"> $ @item.Price </b></p>

               
            </div>
        </div>
    </div>
}

